<?xml version="1.0" encoding="utf-8"?>
<odoo auto_sequence="1">
    <record id="financial_report_balance_sheet_pymes" model="account.report">
        <field name="name">Balanç abreujat</field>
        <field name="root_report_id" ref="account_reports.balance_sheet"/>
        <field name="filter_date_range" eval="False"/>
        <field name="filter_analytic_groupby" eval="True"/>
        <field name="filter_unfold_all" eval="True"/>
        <field name="country_id" ref="base.ad"/>
        <field name="filter_multi_company">selector</field>
        <field name="allow_account_audit_status_on_lines" eval="True"/>
        <field name="column_ids">
            <record id="financial_report_balance_sheet_pymes_column" model="account.report.column">
                <field name="name">Balance</field>
                <field name="name@es">Saldo</field>
                <field name="expression_label">balance</field>
            </record>
        </field>
        <field name="line_ids">

            <!-- ACTIU -->
            <record id="balance_pymes_line_10000" model="account.report.line">
                <field name="name">TOTAL ACTIU</field>
                <field name="code">l10n_es_pymes_line_10000</field>
                <field name="aggregation_formula">l10n_es_pymes_line_11000.balance + l10n_es_pymes_line_12000.balance</field>
                <field name="horizontal_split_side">left</field>
                <field name="hierarchy_level">0</field>
                <field name="children_ids">

                    <!-- ACTIU NO CORRENT -->
                    <record id="balance_pymes_line_11000" model="account.report.line">
                        <field name="name">ACTIU NO CORRENT</field>
                        <field name="code">l10n_es_pymes_line_11000</field>
                        <field name="aggregation_formula">l10n_es_pymes_line_11100.balance + l10n_es_pymes_line_11200.balance + l10n_es_pymes_line_11300.balance + l10n_es_pymes_line_11400.balance</field>
                        <field name="children_ids">
                            <record id="balance_pymes_line_11100" model="account.report.line">
                                <field name="name">Immobilitzat intangible</field>
                                <field name="code">l10n_es_pymes_line_11100</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">20 + 280 + 290</field>
                            </record>
                            <record id="balance_pymes_line_11200" model="account.report.line">
                                <field name="name">Immobilitzat tangible</field>
                                <field name="code">l10n_es_pymes_line_11200</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">21 + 23 + 281 + 291</field>
                            </record>
                            <record id="balance_pymes_line_11300" model="account.report.line">
                                <field name="name">Inversions immobiliàries</field>
                                <field name="code">l10n_es_pymes_line_11300</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">22 + 282 + 292</field>
                            </record>
                            <record id="balance_pymes_line_11400" model="account.report.line">
                                <field name="name">Immobilitzat financer</field>
                                <field name="code">l10n_es_pymes_line_11400</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">24 + 25 + 293 + 294 + 295 + 296 + 297 + 298 + 260 + 265</field>
                            </record>
                        </field>
                    </record>

                    <!-- ACTIU CORRENT -->
                    <record id="balance_pymes_line_12000" model="account.report.line">
                        <field name="name">ACTIU CORRENT</field>
                        <field name="code">l10n_es_pymes_line_12000</field>
                        <field name="aggregation_formula">l10n_es_pymes_line_12100.balance + l10n_es_pymes_line_12200.balance + l10n_es_pymes_line_12300.balance + l10n_es_pymes_line_12400.balance + l10n_es_pymes_line_12500.balance + l10n_es_pymes_line_12600.balance</field>
                        <field name="children_ids">
                            <record id="balance_pymes_line_12100" model="account.report.line">
                                <field name="name">Altres actius no corrents en venda</field>
                                <field name="code">l10n_es_pymes_line_12100</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">58 + 599</field>
                            </record>
                            <record id="balance_pymes_line_12200" model="account.report.line">
                                <field name="name">Existències</field>
                                <field name="code">l10n_es_pymes_line_12200</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">3 + 407</field>
                            </record>
                            <record id="balance_pymes_line_12300" model="account.report.line">
                                <field name="name">Crèdits i comptes per cobrar a curt termini</field>
                                <field name="code">l10n_es_pymes_line_12300</field>
                                <!-- <field name="groupby">account_id</field> -->
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">43 + 44 + 460 + 470 + 490 + 493 + 472 + 473 + 474</field>
                            </record>
                            <record id="balance_pymes_line_12400" model="account.report.line">
                                <field name="name">Inversions financeres a curt termini</field>
                                <field name="code">l10n_es_pymes_line_12400</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">53 + 54 + 56 + 593 + 594 + 595 + 597 + 598</field>
                            </record>
                            <record id="balance_pymes_line_12500" model="account.report.line">
                                <field name="name">Tresoreria</field>
                                <field name="code">l10n_es_pymes_line_12500</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">57</field>
                            </record>
                            <record id="balance_pymes_line_12600" model="account.report.line">
                                <field name="name">Ajustaments per periodificació</field>
                                <field name="code">l10n_es_pymes_line_12600</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">480 + 567</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>

            <!-- PATRIMONI NET I PASSIU -->
            <record id="balance_pymes_line_30000" model="account.report.line">
                <field name="name">TOTAL PATRIMONI NET I PASSIU</field>
                <field name="code">l10n_es_pymes_line_30000</field>
                <field name="aggregation_formula">l10n_es_pymes_line_20000.balance + l10n_es_pymes_line_31000.balance + l10n_es_pymes_line_32000.balance</field>
                <field name="horizontal_split_side">right</field>
                <field name="hierarchy_level">0</field>
                <field name="children_ids">

                    <!-- PATRIMONI NET -->
                    <record id="balance_pymes_line_20000" model="account.report.line">
                        <field name="name">PATRIMONI NET</field>
                        <field name="code">l10n_es_pymes_line_20000</field>
                        <field name="aggregation_formula">l10n_es_pymes_line_21000.balance</field>
                        <field name="children_ids">
                            <record id="balance_pymes_line_21000" model="account.report.line">
                                <field name="name">Capital</field>
                                <field name="code">l10n_es_pymes_line_21000</field>
                                <field name="aggregation_formula">l10n_es_pymes_line_21100.balance + l10n_es_pymes_line_21200.balance + l10n_es_pymes_line_21300.balance + l10n_es_pymes_line_21400.balance + l10n_es_pymes_line_21500.balance + l10n_es_pymes_line_21600.balance + l10n_es_pymes_line_21700.balance + l10n_es_pymes_line_21800.balance</field>
                                <field name="children_ids">
                                    <record id="balance_pymes_line_21100" model="account.report.line">
                                        <field name="name">I. Capital</field>
                                        <field name="name@es">I. Capital</field>
                                        <field name="code">l10n_es_pymes_line_21100</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="account_codes_formula">-10</field>
                                    </record>
                                    <record id="balance_pymes_line_21200" model="account.report.line">
                                        <field name="name">Prima d’emissió</field>
                                        <field name="code">l10n_es_pymes_line_21200</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="account_codes_formula">-110</field>
                                    </record>
                                    <record id="balance_pymes_line_21300" model="account.report.line">
                                        <field name="name">Reserves</field>
                                        <field name="code">l10n_es_pymes_line_21300</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="account_codes_formula">-113 - 112 - 119 - 114 - 115 - 116 - 118</field>
                                    </record>
                                    <record id="balance_pymes_line_21400" model="account.report.line">
                                        <field name="name">Instruments de capital propis</field>
                                        <field name="code">l10n_es_pymes_line_21400</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="account_codes_formula">-109 - 108</field>
                                    </record>
                                    <record id="balance_pymes_line_21500" model="account.report.line">
                                        <field name="name">Resultats d'exercicis anteriors</field>
                                        <field name="code">l10n_es_pymes_line_21500</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="account_codes_formula">- 120 - 121</field>
                                    </record>
                                    <!-- <record id="balance_pymes_line_21700" model="account.report.line">
                                        <field name="name">Resultat de l'exercici</field>
                                        <field name="code">l10n_es_pymes_line_21700</field>
                                        <field name="action_id" ref="account_reports.action_account_report_pl"/>
                                        <field name="expression_ids">
                                            <record id="balance_pymes_line_21700_balance" model="account.report.expression">
                                                <field name="label">balance</field>
                                                <field name="engine">aggregation</field>
                                                <field name="subformula">cross_report(l10n_ad_reports.financial_report_es_profit_and_loss)</field>
                                                <field name="formula">ad_pl_year_sum.balance</field>
                                                <field name="date_scope">from_fiscalyear</field>
                                            </record>
                                        </field>
                                    </record> -->
                                    <record id="balance_pymes_line_21800" model="account.report.line">
                                        <field name="name">Dividend a compte</field>
                                        <field name="code">l10n_es_pymes_line_21800</field>
                                        <field name="groupby">account_id</field>
                                        <field name="foldable" eval="True"/>
                                        <field name="account_codes_formula">- 557</field>
                                    </record>
                                </field>
                            </record>
                        </field>
                    </record>

                    <!-- PASSIU NO CORRENT -->
                    <record id="balance_pymes_line_31000" model="account.report.line">
                        <field name="name">PASSIU NO CORRENT</field>
                        <field name="code">l10n_es_pymes_line_31000</field>
                        <field name="aggregation_formula">l10n_es_pymes_line_31100.balance + l10n_es_pymes_line_31200.balance + l10n_es_pymes_line_31300.balance + l10n_es_pymes_line_31400.balance</field>
                        <field name="children_ids">
                            <record id="balance_pymes_line_31100" model="account.report.line">
                                <field name="name">Provisions a llarg termini</field>
                                <field name="code">l10n_es_pymes_line_31100</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-141 - 143 - 145 - 146</field>
                            </record>
                            <record id="balance_pymes_line_31200" model="account.report.line">
                                <field name="name">Deutes a llarg termini</field>
                                <field name="code">l10n_es_pymes_line_31200</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-17 - 18</field>
                            </record>
                            <record id="balance_pymes_line_31300" model="account.report.line">
                                <field name="name">Deutes amb empreses del grup i associades a llarg termin</field>
                                <field name="code">l10n_es_pymes_line_31300</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-16</field>
                            </record>
                            <record id="balance_pymes_line_31400" model="account.report.line">
                                <field name="name">Subvencions</field>
                                <field name="code">l10n_es_pymes_line_31400</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-13</field>
                            </record>
                        </field>
                    </record>

                    <!-- PASSIU CORRENT -->
                    <record id="balance_pymes_line_32000" model="account.report.line">
                        <field name="name">PASSIU CORRENT</field>
                        <field name="code">l10n_es_pymes_line_32000</field>
                        <field name="aggregation_formula">l10n_es_pymes_line_32100.balance + l10n_es_pymes_line_32200.balance + l10n_es_pymes_line_32300.balance + l10n_es_pymes_line_32400.balance + l10n_es_pymes_line_32500.balance + l10n_es_pymes_line_32600.balance</field>
                        <field name="children_ids">
                            <record id="balance_pymes_line_32100" model="account.report.line">
                                <field name="name">Passius vinculats amb altres actius no corrents en venda</field>
                                <field name="code">l10n_es_pymes_line_32100</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-58</field>
                            </record>
                            <record id="balance_pymes_line_32200" model="account.report.line">
                                <field name="name">Provisions a curt termin</field>
                                <field name="code">l10n_es_pymes_line_32200</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-529 - 499</field>
                            </record>
                            <record id="balance_pymes_line_32300" model="account.report.line">
                                <field name="name">Deutes a curt termini</field>
                                <field name="code">l10n_es_pymes_line_32300</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-194 - 475 - 476 - 477 - 479 - 50 - 52 - 550 - 551 - 552 - 554 - 555 - 556 - 560 - 561 - 569</field>
                            </record>
                            <record id="balance_pymes_line_32400" model="account.report.line">
                                <field name="name">Deutes amb empreses del grup i associades a curt termin</field>
                                <field name="code">l10n_es_pymes_line_32400</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-51</field>
                            </record>
                            <record id="balance_pymes_line_32500" model="account.report.line">
                                <field name="name">Creditors comercials i altres comptes a pagar</field>
                                <field name="code">l10n_es_pymes_line_32500</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">- 40 - 41 - 438 - 465 - 466</field>
                            </record>
                            <record id="balance_pymes_line_32600" model="account.report.line">
                                <field name="name">Ajustaments per periodificació</field>
                                <field name="code">l10n_es_pymes_line_32600</field>
                                <field name="groupby">account_id</field>
                                <field name="foldable" eval="True"/>
                                <field name="account_codes_formula">-485 - 568</field>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
        </field>
    </record>
</odoo>